<div class="relative min-h-screen pt-32 pb-20">
	<div class="absolute inset-0 overflow-hidden pointer-events-none">
		<div class="absolute top-0 left-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl"></div>
		<div class="absolute bottom-0 right-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
	</div>
	<div class="max-w-7xl mx-auto px-6 mb-16 relative z-10">
		<button class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 mb-8 transition-colors" style="opacity: 1; transform: none;">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left w-5 h-5" aria-hidden="true">
				<path d="m12 19-7-7 7-7"></path>
				<path d="M19 12H5"></path>
			</svg>
			<span>{{'Retour aux catégories'|t}}</span>
		</button>
		<div class="inline-flex items-center gap-3 bg-gradient-to-r from-cyan-500/10 to-blue-500/10 border border-cyan-500/30 rounded-full px-6 py-3 mb-8" style="opacity: 1; transform: none;">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-package w-5 h-5 text-cyan-400" aria-hidden="true">
				<path d="M11 21.73a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73z"></path>
				<path d="M12 22V12"></path>
				<polyline points="3.29 7 12 12 20.71 7"></polyline>
				<path d="m7.5 4.27 9 5.15"></path>
			</svg>
			<span class="text-cyan-300">{{'Matériel Neuf'|t}}</span>
		</div>
		<h1 class="text-6xl md:text-7xl mb-8 leading-tight" style="opacity: 1; transform: none;">
			<span class="text-white">{{ node.title.value }}</span>
		</h1>
		<p class="text-xl text-gray-300 max-w-3xl" style="opacity: 1; transform: none;">Découvrez notre
									                  sélection de machine à sec neufs avec garantie complète.</p>
	</div>
	<div class="max-w-7xl mx-auto px-6 relative z-10">
		<div
			class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{#  #}

			{% if content.field_new_listing_paragraph %}
  {% for item in content.field_new_listing_paragraph|filter((v, k) => k|first != '#') %}
    {% if item['#paragraph'] %}
      {% set paragraph = item['#paragraph'] %}

      {# Get title from field_titre #}
      {% set title = paragraph.field_titre.value %}

      {# Get PDF URL from field_pdf with target_id = 20 #}
      {% if paragraph.field_pdf.0.entity %}
        {% set pdf_file = paragraph.field_pdf.0.entity %}
        {% set pdf_url = file_url(pdf_file.uri.value) %}

        <a href="{{ pdf_url }}" download class="group relative bg-gradient-to-br from-slate-900/50 to-cyan-900/30 backdrop-blur-sm border border-cyan-500/20 rounded-3xl overflow-hidden hover:border-cyan-500/50 transition-all duration-300 cursor-pointer block">
          <div class="relative h-64 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/50 to-transparent z-10"></div>

            {# Get image from field_image with target_id = 19 #}
            {% if paragraph.field_image.0.entity %}
              {% set image = paragraph.field_image.0.entity %}
              <img src="{{ file_url(image.uri.value) }}"
                   alt="{{ paragraph.field_image.0.alt }}"
                   class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
            {% endif %}

            <div class="absolute top-4 right-4 z-20 bg-cyan-500/90 backdrop-blur-sm px-4 py-2 rounded-full">
              <span class="text-white text-sm">Neuf</span>
            </div>
          </div>

          <div class="relative p-6">
            <h3 class="text-2xl text-white mb-4 group-hover:text-cyan-400 transition-colors">
              {{ title }}
            </h3>
            <div class="flex items-center gap-2 text-cyan-400 group-hover:gap-3 transition-all">
              <span class="text-sm">Télécharger</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download w-4 h-4">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" x2="12" y1="15" y2="3"></line>
              </svg>
            </div>
          </div>

          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
        </a>
      {% endif %}

    {% endif %}
  {% endfor %}
{% endif %}
