<article style="opacity: 1; transform: none;">
	<div class="absolute inset-0 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-3xl opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-500"></div>
	<div class="relative bg-gradient-to-br from-slate-800/90 to-slate-900/90 backdrop-blur-xl rounded-3xl border border-white/10 overflow-hidden">
		<div class="relative h-80 overflow-hidden"><img src="{{ file_url(row._entity.field_image.entity.fileuri) }}" alt="L'Impact de la Qualité de l'Équipement sur la Qualité du Service en Pressing" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
			<div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/60 to-transparent"></div>
			<div class="absolute top-6 right-6 w-16 h-16 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-full flex items-center justify-center shadow-lg" style="transform: none;">
				<div class="text-center">
					<div class="text-white text-xs">
						{{ row._entity.created.value|date('d') }}
					</div>
					<div class="text-white text-[10px] opacity-80">
						{{ row._entity.created.value|date('m/Y') }}
					</div>
				</div>

			</div>
			<div class="absolute top-6 left-6">
				<div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2">
					<span class="text-white text-sm">{{ fields.field_categorie.content }}</span>
				</div>
			</div>
		</div>
		<div class="p-8 body__acc">
			<h3 class="text-white text-2xl mb-4 leading-tight group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-cyan-400 group-hover:to-blue-600 transition-all duration-300">
				{{ fields.title.content }}</h3>
			{{ fields.body.content }}
			<div class="flex items-center justify-between">
				<div class="flex items-center gap-2 text-gray-400 text-sm">
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar w-4 h-4" aria-hidden="true">
						<path d="M8 2v4"></path>
						<path d="M16 2v4"></path>
						<rect width="18" height="18" x="3" y="4" rx="2"></rect>
						<path d="M3 10h18"></path>
					</svg>
					<span>
						{{ 'Ajoutée le'|t }}
						{{ row._entity.created.value|date('d/m/Y') }}
					</span>

				</div>
				<a href="{{ path('entity.node.canonical', {'node':row._entity.nid.value}) }}" class="flex items-center gap-2 bg-gradient-to-r from-cyan-500 to-blue-600 text-white px-6 py-3 rounded-full shadow-lg" tabindex="0" style="transform: none;">
					<span class="text-sm uppercase tracking-wider">Lire la
															                              suite</span>
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right w-4 h-4" aria-hidden="true">
						<path d="M5 12h14"></path>
						<path d="m12 5 7 7-7 7"></path>
					</svg>
				</a>
			</div>
			<div class="h-1 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-full mt-6" style="width: 0px;"></div>
		</div>
	</div>
</article>
